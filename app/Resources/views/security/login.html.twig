

{# {% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %} #}

{% extends 'base.html.twig' %}

{% block body %}
    
   

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="container-fluid well well-lg" style="padding: 150px 350px 350px 350px;">
<form role="form" class="form-horizontal" action="{{ path('login_check') }}" method="post">
    <div class="form-group">
        <input type="hidden" name="_csrf_token"
        value="{{ csrf_token('authenticate') }}"
    >
    <label for="username">Username:</label>
    <input class="form-control" type="text" id="username" name="_username" value="{{ username }}" />
    </div>
    <div class="form-group">
    <label for="password">Password:</label>
    <input class="form-control" type="password" id="password" name="_password" />
    </div>
<input type="hidden" name="_target_path" value="/app/tasks" />
<div class="form-group">
<button class="btn btn-default" type="submit">Sign in</button>
</div>
</form>
</div>
    
    
    {% endblock %}
      
   